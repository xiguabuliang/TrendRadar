# TrendRadar 生产环境配置

# 钉钉配置 (GitHub Secrets中的DINGTALK_WEBHOOK_URL会被自动注入)
DINGTALK_WEBHOOK_URL=

# 运行配置
ENABLE_CRAWLER=true
ENABLE_NOTIFICATION=true
REPORT_MODE=full

# 推送时间窗口 (08:00-10:00)
PUSH_WINDOW_ENABLED=true
PUSH_WINDOW_START=08:00
PUSH_WINDOW_END=10:00
PUSH_WINDOW_ONCE_PER_DAY=true

# Web服务器
ENABLE_WEBSERVER=true
WEBSERVER_PORT=8080

# 定时任务 (每5分钟检查一次)
CRON_SCHEDULE=*/5 * * * *
RUN_MODE=cron
IMMEDIATE_RUN=true

# 时区
TZ=Asia/Shanghai